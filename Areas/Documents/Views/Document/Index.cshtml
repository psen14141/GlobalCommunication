            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DocumentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DocumentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DocumentTypeName)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.DocumentDescription)
                    </td>*@
