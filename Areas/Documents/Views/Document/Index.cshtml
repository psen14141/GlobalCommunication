    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script>
    $(document).ready(function () {
        $('#dtDesign').DataTable();
        $('.dataTables_length').addClass('bs-select');
    });
</script>
<h5>Document</h5>

<p>
    <a href="#" class="btn btn-primary" onclick="showAddOrEditUi(0)">Create New</a>
</p>
