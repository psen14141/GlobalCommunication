@model GloableCommunication.DbModels.DocumentType

@{
    ViewData["Title"] = "AddorEditView";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <form method="post" action="/Documents/DocumentType/SaveData">
            <input type="hidden" name="DocumentTypeId" class="form-control" id="DocumentTypeId" value="@Model.DocumentTypeId" />
            <input type="hidden" class="form-check-input" name="DocumentTypeIsDelete" id="DocumentTypeIsDelete" value="false" /> @*@Html.DisplayNameFor(model => model.DocumentTypeIsDelete)*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DocumentTypeName" class="control-label">Name</label>
                <input placeholder="Name" name="DocumentTypeName" class="form-control" id="DocumentTypeName" maxlength="100" value="@Model.DocumentTypeName" />
                <span asp-validation-for="DocumentTypeName" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="FolderPath" class="control-label">Folder Path</label>
                <input placeholder="Folder Path" name="FolderPath" class="form-control" id="FolderPath" maxlength="100" value="Other" />
                <span asp-validation-for="FolderPath" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="DocumentTypeDescription" class="control-label">Description</label>
                <textarea placeholder="Description" name="DocumentTypeDescription" class="form-control" id="DocumentTypeDescription" maxlength="250">@Model.DocumentTypeDescription</textarea>
                <span asp-validation-for="DocumentTypeDescription" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    $("input").on("keyup", function () {
        var maxLength = $(this).attr("maxlength");
        if (maxLength == $(this).val().length) {
            alert("Characters length exceeds the Limit, please input less than " + maxLength + " characters");
        }
    })

    $("textarea").on("keyup", function () {
        var maxLength = $(this).attr("maxlength");
        if (maxLength == $(this).val().length) {
            alert("Characters length exceeds the Limit, please input less than " + maxLength + " characters");
        }
    })
</script>