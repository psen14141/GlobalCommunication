</div>

<div class="w3-container w3-margin-top w3-gray">
    <h5 style="text-align:center">送出機関情報</h5>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


<div id="divcontent">
