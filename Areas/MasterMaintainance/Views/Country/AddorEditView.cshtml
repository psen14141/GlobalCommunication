@model GloableCommunication.Areas.MasterMaintainance.Models.ViewModels.CountryViewModel

@{
    ViewData["Title"] = "AddorEditView";
    Layout = null;
}

<div class="w3-container w3-margin-top w3-gray">
    <h5 style="text-align:center"><b>国情報登録</b></h5>
</div>
<hr />
<div class="row">
    <div class="col-12">
        <form class="form-horizontal" method="post" action="">
            <input type="hidden" name="CountryId" id="CountryId" class="form-control" value="@Model.CountryId" />
            <span asp-validation-for="CountryId" class="text-danger"></span>

            <div class="form-group ">
                <div class="row">
                    <div class="col-md-4">
                        <label asp-for="CountryCode" class="control-label">国　CODE</label>
                    </div>
                    <div class="col-md-8 align-self-cente input-group-append">
                        <input name="CountryCode" id="CountryCode" class="form-control" value="@Model.CountryCode" readonly/>
                    </div>
                </div>
            </div>

            <div class="form-group ">
                <div class="row">
                    <div class="col-md-4">
                        <label asp-for="CountryName" class="control-label">国 名</label>
                    </div>
                    <div class="col-md-8 align-self-cente input-group-append">
                        <input name="CountryName" id="CountryName" class="form-control" value="@Model.CountryName" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="/assets/js/plugin/datepicker/bootstrap-datetimepicker.min.js"></script>
<script>
    $('#InsertDateTime').datetimepicker({
        format: 'YYYY/MM/DD HH:mm',

    });
    $('#UpdateDateTime').datetimepicker({
        format: 'YYYY/MM/DD HH:mm',
    });

</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@***************************************************Data Length**************************************************@
<script>
    $("input").on("keyup", function () {
        var maxLength = $(this).attr("maxlength");
        if (maxLength == $(this).val().length) {
            alert("Characters length exceeds the Limit, please input less than " + maxLength + " characters");
        }
    })

    $("textarea").on("keyup", function () {
        var maxLength = $(this).attr("maxlength");
        if (maxLength == $(this).val().length) {
            alert("Characters length exceeds the Limit, please input less than " + maxLength + " characters");
        }
    })
</script>