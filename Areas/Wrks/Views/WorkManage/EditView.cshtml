
@model GloableCommunication.Areas.Wrks.Models.ViewModels.WorksViewModel

@*@{
    ViewData["Title"] = "EditView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}*@

@*<h1>EditView</h1>

<h4>Work</h4>
